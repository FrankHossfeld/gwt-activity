<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.gwtproject.activity</groupId>
        <artifactId>gwt-activity-parent</artifactId>
        <version>dev</version>
    </parent>
    <artifactId>gwt-activity-widget-gwt2-tests</artifactId>
    <version>${revision}</version>
    <packaging>gwt-lib</packaging>

    <name>GWT Activity JRE Widget Tests</name>
    <description>Test cases for the GWT 2 widgets tests</description>

    <properties>
        <maven.gwt.plugin>1.0.0</maven.gwt.plugin>
        <maven.surfire.plugin>3.0.0-M5</maven.surfire.plugin>

        <gwt.version>2.9.0</gwt.version>
        <javax.validation.api.version>2.0.1.Final</javax.validation.api.version>
        <junit.version>4.12</junit.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${gwt.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-dev</artifactId>
            <version>${gwt.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.gwtproject.activity</groupId>
            <artifactId>gwt-activity</artifactId>
            <version>${revision}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
                        <plugin>
                            <groupId>net.ltgt.gwt.maven</groupId>
                            <artifactId>gwt-maven-plugin</artifactId>
                            <version>${maven.gwt.plugin}</version>
                            <extensions>true</extensions>
                            <configuration>
                                <failOnError>true</failOnError>
                                <moduleName>org.gwtproject.activity.ActivityJreSuite</moduleName>
                            </configuration>
                        </plugin>
<!--            <plugin>-->
<!--                <groupId>net.ltgt.gwt.maven</groupId>-->
<!--                <artifactId>gwt-maven-plugin</artifactId>-->
<!--                <version>${maven.gwt.plugin}</version>-->
<!--                <extensions>true</extensions>-->
<!--                <configuration>-->
<!--                    <failOnError>true</failOnError>-->
<!--                    <moduleName>org.gwtproject.editor.client.EditorTestSuite</moduleName>-->
<!--                </configuration>-->
<!--            </plugin>-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven.deploy.plugin}</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>